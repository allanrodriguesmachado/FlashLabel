<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="320.0" spacing="20.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="br.com.bank.controller.auth.AuthController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Login">
        <font>
            <Font name="Calibri Bold" size="24.0" />
        </font>
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </Label>

    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="CPF:">
            <font>
                <Font name="Calibri Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="document"  promptText="Digite o seu CPF" />
    </VBox>

     <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="SENHA:">
            <font>
                <Font name="Calibri Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="password" promptText="Digite a sua senha" />
    </VBox>
    
    <Button onAction="#loginAction" text="Acessar">
        <font>
            <Font name="Calibre Bold" size="18.0" />
        </font>
    </Button>
</VBox>