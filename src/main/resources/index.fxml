<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="320.0" spacing="20.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="br.com.bank.controller.BasicController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Acesso Ã  Conta">
        <font>
            <Font name="Calibri Bold" size="24.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label fx:id="label" text="CPF:">
            <font>
                <Font name="Calibri Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtCpf" promptText="Digite o seu CPF" />
    </VBox>

     <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label fx:id="label" text="SENHA:">
            <font>
                <Font name="Calibri Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtPassword" promptText="Digite a sua senha" />
    </VBox>
    
    <Label fx:id="messageLabel" minHeight="16" prefHeight="16.0" prefWidth="280.0" />

    <Button fx:id="button" onAction="#handleButtonAction" text="Acessar Conta">
        <font>
            <Font name="Calibri Bold" size="18.0" />
        </font>
    </Button>
</VBox>