<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1200.0" stylesheets="@sistema.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.manager.pdv.controller.TooBarController">

    <center>
        <VBox spacing="20.0" styleClass="root">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox>
                    <Label styleClass="title-large" text="Dashboard - PDV"/>
                </VBox>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="newProduct" onAction="#openModalProduct" styleClass="btn-primary-action"
                        text="+ NOVO PRODUTO"/>

                <Button fx:id="newCategory" onAction="#openModalCategory" styleClass="btn-primary-action"
                        text="+ Nova Categoria"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>

