<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="720.0" prefWidth="1200.0" stylesheets="@sistema.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.manager.pdv.controller.auth.RegisterController">

    <center>
        <VBox spacing="20.0" styleClass="root">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Button styleClass="header-back-btn">
                    <graphic>
                        <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" fill="#2d3436" scaleX="1.2" scaleY="1.2" />
                    </graphic>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <VBox>
                    <Label styleClass="title-large" text="Gestão de Produtos" />
                    <Label styleClass="row-subtitle" text="Vincule categorias e defina preços" />
                </VBox>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnNovoProduto" onAction="#abrirModalCadastro" styleClass="btn-primary-action" text="+ NOVO PRODUTO" />
            </HBox>

        </VBox>
    </center>
</BorderPane>